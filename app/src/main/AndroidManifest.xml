<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chetan.balancesheet">

    <application
        android:name=".base.BalanceSheetApplication"
        android:allowBackup="true"
        android:icon="@drawable/app_balance_sheet"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".view.activities.SettingsActvity"
            android:label="@string/title_activity_settings_actvity"
            android:parentActivityName=".view.activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".view.activities.PayPeriodActivity"
            android:parentActivityName=".view.activities.MainActivity"/>
    </application>

</manifest>